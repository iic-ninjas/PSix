<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.paypal.psix.activities.EventStatusActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <fragment android:name="com.paypal.psix.fragments.EventStatusFragment"
            android:id="@+id/event"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout="@layout/fragment_event_status" />

        <fragment
            android:name="com.paypal.psix.fragments.RsvpListFragment"
            android:id="@+id/rsvp_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout="@layout/fragment_rsvp_list"/>

    </LinearLayout>

</RelativeLayout>
