<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ioniconview="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentTop="true"
    android:background="@drawable/container_dropshadow"
    android:padding="16dp">

    <include layout="@layout/event_header"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/you_invited"
        android:id="@+id/event_number_of_invitees"
        android:textColor="#ff363636"
        android:layout_marginBottom="10dp" />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:weightSum="1.0"
        android:gravity="left">

        <be.webelite.ion.IconView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            ioniconview:name="ion_ios7_pricetag"
            android:id="@+id/event_item_action_icon"
            android:gravity="center"
            android:textSize="24dp"
            android:textColor="#000"
            android:layout_marginRight="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="$"
            android:id="@+id/textView4"
            android:layout_marginRight="0dp"
            android:textColor="#ff363636" />

        <EditText
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:minHeight="50dp"
            android:hint="@string/hint_setup_event_price"
            android:inputType="number"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:ems="50"
            android:id="@+id/edit_payment_sum"
            android:layout_marginRight="5dp"
            android:background="@drawable/edit_text_border"
            android:padding="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/dollar_per"
            android:id="@+id/textView" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp">

        <be.webelite.ion.IconView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            ioniconview:name="ion_document_text"
            android:gravity="center"
            android:textSize="24dp"
            android:textColor="#000"
            android:layout_marginRight="7dp"
            android:layout_marginLeft="2dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/label_setup_event_reason" />
    </LinearLayout>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:minHeight="100dp"
        android:id="@+id/edit_payment_reason"
        android:background="@drawable/edit_text_border"
        android:gravity="top"
        android:hint="@string/hint_setup_event_reason"
        android:padding="5dp"
        android:layout_weight="1" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:text="@string/button_create_payment_link"
            android:id="@+id/button_create_paymentLink"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:textColor="#ffffffff"
            android:padding="10dp"
            android:layout_marginTop="20dp"
            android:elevation="5dp"
            android:layout_weight="1"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/psix_button" />

    </LinearLayout>


</LinearLayout>

